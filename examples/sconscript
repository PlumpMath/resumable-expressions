Import('env')

env.AppendUnique( STATICLIBS =
    env.BoostStaticLibrary( [
        'coroutine'
    ] )
)

examples = {

    "await1"     : 'await1.cpp',
    "await2"     : 'await2.cpp',
    "generator1" : 'generator1.cpp',
    "generator2" : 'generator2.cpp',
    "generator3" : 'generator3.cpp',
    "generator4" : 'generator4.cpp',
    "generator5" : 'generator5.cpp',
    "printer"    : 'printer.cpp'

}

for example, sources in examples.iteritems():
    env.BuildTest( example, Split( sources ) )
